---
import '../styles/global.css';
import ThemeSwitcher from '../components/ThemeSwitcher.tsx';

interface Props {
  title?: string;
  image?: string;
}

const {
  title = 'Живущие мечтой',
  image = '/og-default.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts: Newsreader + Material Symbols Outlined -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,200..800;1,6..72,200..800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Inline script to prevent theme flash -->
    <script is:inline define:vars={{}}>
      (function() {
        const theme = localStorage.getItem('theme');
        const root = document.documentElement;

        // Disable transitions during initial theme apply to prevent animation
        const style = document.createElement('style');
        style.innerHTML = '* { transition: none !important; }';
        document.head.appendChild(style);

        // Apply theme class
        if (theme === 'dark') {
          root.classList.add('dark');
        } else if (theme === 'light') {
          root.classList.add('light');
        } else {
          // system theme - detect preference
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            root.classList.add('dark');
          } else {
            root.classList.add('light');
          }
        }

        // Re-enable transitions after next frame
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            style.remove();
          });
        });
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Sticky Header -->
    <header class="sticky top-0 z-50 backdrop-blur-md" style="background-color: var(--color-background); border-bottom: 1px solid var(--color-border);">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-4 sm:py-6 flex justify-between items-center">
          <h1 class="text-xl sm:text-2xl font-normal tracking-tight">
            <a href="/" class="hover:opacity-70 transition-opacity link-hover" style="color: var(--color-foreground);">
              Живущие мечтой
            </a>
          </h1>
          <ThemeSwitcher client:load />
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Minimal Footer -->
    <footer class="mt-auto" style="border-top: 1px solid var(--color-border);">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <p class="text-sm text-center" style="color: var(--color-muted);">
          © {currentYear} Живущие мечтой
        </p>
      </div>
    </footer>
  </body>
</html>
